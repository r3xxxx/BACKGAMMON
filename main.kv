FloatLayout:
    Background:
        id: background
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "backgroundMenu.png"
            Rectangle:
                size: self.width, 138
                pos: self.pos[0], self.pos[1] + self.height -138
                texture: self.dice_texture
            Rectangle:
                size: self.width, 500
                pos: self.pos[0], self.pos[1]
                texture: self.points_texture
